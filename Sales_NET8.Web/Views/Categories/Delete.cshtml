@model Sales_NET8.Web.Data.Entities.Category

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover Categoria</h1>

<h3>Tem certeza de que deseja remover esta categoria?</h3>
<div>
    <partial name="_CategoryDetails" />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Voltar para a Lista</a>
    </form>
</div>